/* pages/show/show.wxss */
.container {
  padding: 0;
  width: 100%;
  height: 100%;
  display: felx;
  flex-direction: column;
  justify-content: space-between;
}

.banner {
  width: 100%;
  height: 25vh;
  background-size: cover;
  background-position: center;
}

.info-wrapper {
  width: 100%;
  height: 30vh;
  margin: 20px;
  padding: 0 20px;
}

.reviews {
  flex-grow: 1;
}

.card {
  display: flex;
  border: 1px solid rgba(200,200,200,0.5);
  width: 100%;
  height: 100%;
  border-radius: 10px;
}

.font-title {
  font-size: 30px;
}

.font-bold {
  font-weight: bold;
}

.font-black {
  color: black;
}